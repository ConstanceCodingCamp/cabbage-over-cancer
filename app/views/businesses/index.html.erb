<% if user_signed_in? %>

<caption><h1>Network</h1></caption>

<table class="table table-striped table-hover table-bordered caption-top">
  <thead class="thead-dark">
    <tr>
      <th>Business name</th>
      <th>Website</th>
      <th>Social media</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
    <!-- the if statement is to only show current user entries to current user -->
      <% if business.user == current_user %>
      <tr>
        <td><%= link_to business.business_name, business %></td>
        <td><%= business.website %></td>
        <td><%= business.social_media %></td>
        <td><%= business.email %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add My Business', new_business_path, class: "btn btn-secondary" %>


<% else %>

<h1>Hello world</h1>

<% end %>