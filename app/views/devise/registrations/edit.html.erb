<div class="card text-dark">
   <div class="card-header">
      <h2>Edit Profile</h2>
     </div> 
 <div class="card-body">
 
    <% resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email" %>
  <!-- </div> -->

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
</br>
  <div class="field form-group">
    <% f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"Password" %>
        <% if @minimum_password_length %> </br>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
  </div>

  <div class="field form-group">
    <% f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Password", autocomplete: "confirm password" %>
  </div>
  <div class="field form-group">
    <% f.label :current_password %> <i>(confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder:"Current Password", autocomplete: "Current Password" %>
  </div>

  <div class="actions">
      <%= f.submit "Update", class:"btn btn-success"  %>
    </div> 
    <% end %>
      </br>
  </div>
</div>

</br>

<center>
  <div class="card text-dark border-danger">
    <div class="card-header">
      <h2>Cancel my account</h2></div>
        <br><p>All account information will be deleted. </br> <br> To remove you ad(s), email: </br> <strong> fstechwriter@gmail.com </strong> <br> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure? Once deleted this action can not be undone." }, method: :delete, class:"btn btn-danger" %></p></br>
    <%= link_to "Back", :back %>
  </div>
</center>